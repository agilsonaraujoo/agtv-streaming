{
  "version": 2,
  "builds": [
    {
      "src": "build/index.html",
      "use": "@vercel/static-build"
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/server.js" },
    { "src": "/create-checkout-session", "dest": "backend/server.js" },
    { "src": "/create-portal-session", "dest": "backend/server.js" },
    { "src": "/webhook", "dest": "backend/server.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
